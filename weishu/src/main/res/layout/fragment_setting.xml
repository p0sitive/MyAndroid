<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white">

    <RelativeLayout
        android:id="@+id/fragment_setting_user_info"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:clickable="true"
        android:background="@drawable/bg_press_white_to_gray">
        <com.garfield.weishu.ui.view.HeadImageView
            android:id="@+id/fragment_setting_head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/fragment_setting_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/fragment_setting_head"
            android:layout_alignTop="@id/fragment_setting_head"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="test"/>
        <TextView
            android:id="@+id/fragment_setting_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_setting_head"
            android:layout_below="@id/fragment_setting_nickname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black_gray"
            android:textSize="14sp"
            android:text="test"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/fragment_setting_notify"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:background="@drawable/bg_press_white_to_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="接收新消息通知"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <com.garfield.baselib.ui.widget.SwitchButton
                    android:id="@+id/fragment_setting_notify_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">
                </com.garfield.baselib.ui.widget.SwitchButton>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/fragment_setting_sound"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_press_white_to_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="声音"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <com.garfield.baselib.ui.widget.SwitchButton
                    android:id="@+id/fragment_setting_sound_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">
                </com.garfield.baselib.ui.widget.SwitchButton>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/fragment_setting_vibrate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_press_white_to_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="震动"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <com.garfield.baselib.ui.widget.SwitchButton
                    android:id="@+id/fragment_setting_vibrate_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">
                </com.garfield.baselib.ui.widget.SwitchButton>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_setting_animator"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_press_white_to_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="打开所有动画"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <com.garfield.baselib.ui.widget.SwitchButton
                    android:id="@+id/fragment_setting_animator_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">
                </com.garfield.baselib.ui.widget.SwitchButton>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_setting_clear_message"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_press_white_to_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="19dp"
                    android:text="清空所有聊天记录"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_setting_about"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_press_white_to_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="关于"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/fragment_setting_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:text="@string/logout"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_login_button"
                android:clickable="true"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>