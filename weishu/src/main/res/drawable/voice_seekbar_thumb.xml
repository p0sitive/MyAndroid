<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="16dp"
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp">
        <shape
            android:shape="oval">
            <solid
                android:color="#afafaf"/>
            <stroke
                android:color="#e3e3e3"
                android:width="6dp"/>
            <size
                android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <solid android:color="#00000000"/>
            <size android:width="40dp"/>
        </shape>
    </item>
</layer-list>