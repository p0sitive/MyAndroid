<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.garfield.study"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.garfield.study.viewdraghelper.activity.MainActivity" />
        <activity android:name="com.garfield.study.viewdraghelper.activity.ImageActivity" />
        <activity android:name="com.garfield.study.touch.MainActivity" />
        <activity android:name="com.garfield.study.ui.SpeedActivity" />
        <activity android:name=".socket.SocketActivity" />

        <activity
            android:name="com.garfield.study.ui.SwipeBackTestActivity"
            android:theme="@style/AppTheme.SwipeBack"/>
    </application>

</manifest>